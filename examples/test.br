
struct Rect {
  width: i32;
  height: i32;
};

fn zero (rect: *Rect) {
  rect->width = 0;
  rect->height = 0;
}

fn main () {
  const x: i32 = -3;
  const y = x + 10;

  const ptr: *i32 = &x;
  *ptr = 10;

  let r1 = Rect{ width: x, height: y };
  printf("Width: %f\nHeight: %f\n", r1.width, r1.height); // -3, 7
  zero(&r1);
  printf("Width: %f\nHeight: %f\n", r1.width, r1.height); //  0, 0
}